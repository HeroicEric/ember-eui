<EuiPageHeader>
  <EuiPageHeaderSection>
    <EuiTitle @size="l">
      <h1>
        Tabs
      </h1>
    </EuiTitle>
  </EuiPageHeaderSection>
</EuiPageHeader>
<EuiPageContent>
  <EuiPageContentBody>
    <EuiTitle @size="s">Simple tabs</EuiTitle>
    <EuiTabs as |EuiTab|>
      <EuiTab>Example 1</EuiTab>
      <EuiTab>Example 2</EuiTab>
      <EuiTab>Example 3</EuiTab>
    </EuiTabs>

    <div class="euiSpacer euiSpacer--xxl"></div>

    <EuiTitle @size="s">Simple tabs with <b>isSelected</b> and <b>display = condensed</b></EuiTitle>
    <EuiTabs
      @display="condensed"
      as |EuiTab|
    >
      <EuiTab @isSelected={{true}}>Example 1</EuiTab>
      <EuiTab>Example 2</EuiTab>
      <EuiTab>Example 3</EuiTab>
    </EuiTabs>

    <div class="euiSpacer euiSpacer--xxl"></div>

    <EuiTitle @size="s">Simple tabs with <b>disabled</b> and <b>expand = true</b></EuiTitle>
    <EuiTabs
      @expand={{true}}
      as |EuiTab|
    >
      <EuiTab @disabled={{true}}>Example 1</EuiTab>
      <EuiTab>Example 2</EuiTab>
    </EuiTabs>

    <div class="euiSpacer euiSpacer--xxl"></div>

    <EuiTitle @size="s">Tabbed content</EuiTitle>
    <EuiTabs::EuiTabbedContent
      @tabs={{this.tabsItems1}}
    />

    <div class="euiSpacer euiSpacer--xxl"></div>

    <EuiTitle @size="s">Tabbed content with <b>onTabClick</b></EuiTitle>
    <EuiTabs::EuiTabbedContent
      @tabs={{this.tabsItems2}}
      @onTabClick={{this.sayMyName}}
    />

    <div class="euiSpacer euiSpacer--xxl"></div>

    <EuiTitle @size="s">Tabbed content with <b>initialSelectedTab</b></EuiTitle>
    <EuiTabs::EuiTabbedContent
      @tabs={{this.tabsItems2}}
      @initialSelectedTab={{object-at 2 this.tabsItems2}}
    />

    <div class="euiSpacer euiSpacer--xxl"></div>

    <EuiTitle @size="s">Tabbed content with <b>selectedTab</b></EuiTitle>
    <p>This is used if you want to control the tabs from the outside, however the internal state is not propagated to the outside</p>
    <button
      class="euiButton euiButton--primary"
      {{on "click" this.cycleTabs}}
    >
      Next tab
    </button>
    Selected tab: {{this.tabIndex2}}
    <EuiTabs::EuiTabbedContent
      @tabs={{this.tabsItems2}}
      @selectedTab={{object-at this.tabIndex2 this.tabsItems2}}
    />

    <div class="euiSpacer euiSpacer--xxl"></div>
  </EuiPageContentBody>
</EuiPageContent>
