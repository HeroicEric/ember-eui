<EuiPanel
  @hasShadow={{@hasShadow}}
  @paddingSize={{@paddingSize}}
  @grow={{@grow}}
  class={{class-names
    componentName="EuiPageContent"
    verticalPosition=@verticalPosition
    horizontalPosition=@horizontalPosition
  }}
  ...attributes
>
  {{yield
    (hash
      header=(component
        "eui-page/eui-page-body/eui-page-content/eui-page-content-header"
      )
      body=(component
        "eui-page/eui-page-body/eui-page-content/eui-page-content-body"
      )
    )
  }}
</EuiPanel>