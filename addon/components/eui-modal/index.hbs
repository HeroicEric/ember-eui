<div {{focus-trap isActive=true focusTrapOptions=(hash initialFocus=@initialFocus)}}>
  <div
    {{on-key 'Escape' @onClose}}
    class={{class-names
      "euiModal"
      (unless (eq @restrainWidth false) "euiModal--maxWidth-default")
    }}
    tabIndex={{0}}
    ...attributes
  >
    <EuiButtonIcon
      @iconType="cross"
      onClick={{@onClose}}
      class="euiModal__closeIcon"
      @color="text"
    />
    <div class="euiModal__flex">
      {{yield}}
    </div>
  </div>
</div>