{{#if this.useImage}}
  <img
    class={{class-names
      'EuiIcon'
      this.optionalColorClass
      (if this.isAppIcon 'euiIcon--app')
      @className
      size=this.size
    }}
    alt={{if @title @title}}
    src={{this.icon}}
    tabIndex={{@tabIndex}}
    ...attributes
  />
{{else}}
  {{svg-jar
    this.icon
    class=(class-names
      'EuiIcon'
      this.optionalColorClass
      (if this.isAppIcon 'euiIcon--app')
      @className
      size=this.size
    )
    style=this.optionalCustomStyles
    tabIndex=this.tabIndex
    role='image'
    title=this.title
    aria-labelledby=this.titleId
  }}
{{/if}}