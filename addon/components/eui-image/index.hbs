<figure
  class={{concat "euiImage "
    (unless (eq @hasShadow false) "euiImage--hasShadow ")
    this.sizeClass
    @className
  }}
  ...attributes
>
  {{#if @allowFullScreen}}

    <button
      class="euiImage__button"
      type="button"
      aria-label={{@ariaLabel}}
      data-test-subj={{@dataTestSubj}}
      {{on "click" this.toggleFullscreen}}
    >
      <img
        class="euiImage__img"
        style={{this.sizeStyle}}
        src={{@url}}
        alt={{@alt}}
      >
      <svg width="16" height="16" viewBox="0 0 16 16" xmlns="http://www.w3.org/2000/svg"
        class={{concat
          "euiIcon euiIcon--medium euiImage__icon "
          (unless (eq @fullScreenIconColor "dark") "euiIcon--ghost")
          }}
        focusable="false"
        role="img"
        aria-hidden="true"
      >
        <path d="M13 3v4h-1V4H9V3h4zM3 3h4v1H4v3H3V3zm10 10H9v-1h3V9h1v4zM3 13V9h1v3h3v1H3zM0 1.994C0 .893.895 0 1.994 0h12.012C15.107 0 16 .895 16 1.994v12.012A1.995 1.995 0 0114.006 16H1.994A1.995 1.995 0 010 14.006V1.994zm1 0v12.012c0 .548.446.994.994.994h12.012a.995.995 0 00.994-.994V1.994A.995.995 0 0014.006 1H1.994A.995.995 0 001 1.994z"
        fill-rule="evenodd"></path>
      </svg>
    </button>

  {{else}}
    <img src={{@url}} class="euiImage__img" style={{this.sizeStyle}} alt={{@alt}}>
  {{/if}}

  {{#if @caption}}
    <figcaption class="euiImage__caption">{{@caption}}</figcaption>
  {{/if}}
</figure>


{{#if this.isFullscreen}}
  <EuiOverlayMask @headerZindexLocation="above" @onClick={{this.toggleFullscreen}}>
    <figure
      class="euiImage euiImage-isFullScreen"
    >
      <button
        class="euiImage__button"
        type="button"
        {{on "click" this.toggleFullscreen}}
      >
        <img
          class="euiImage-isFullScreen__img"
          style={{this.sizeStyle}}
          src={{@url}}
          alt={{@alt}}
        >
        <svg width="16" height="16" viewBox="0 0 16 16" xmlns="http://www.w3.org/2000/svg"
          class={{concat
            "euiIcon euiIcon--medium euiImage__icon euiImage-isFullScreen__icon"
            (unless (eq @fullScreenIconColor "dark") "euiIcon--ghost")
            }}
          focusable="false"
          role="img"
          aria-hidden="true"
        >
          <path d="M7.293 8L3.146 3.854a.5.5 0 11.708-.708L8 7.293l4.146-4.147a.5.5 0 01.708.708L8.707 8l4.147 4.146a.5.5 0 01-.708.708L8 8.707l-4.146 4.147a.5.5 0 01-.708-.708L7.293 8z"/>
        </svg>
      </button>
      <figcaption class="euiImage__caption">{{@caption}}</figcaption>
    </figure>
  </EuiOverlayMask>
{{/if}}
